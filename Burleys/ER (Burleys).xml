                        <recipient>
                            <emoSignatureCondition>
                                <Location>Nugegoda</Location>
                            </emoSignatureCondition>
                            <to>mansoorazeez99@gmail.com, ilmullahjaladeen@gmail.com, jshiyam7833@gmail.com, jsilmy@yahoo.com, dmmanager@elineapparels.com</to>
                        </recipient>
                        <recipient>
                            <emoSignatureCondition>
                                <Location>Colombo 04</Location>
                            </emoSignatureCondition>
                            <to>mansoorazeez99@gmail.com, ilmullahjaladeen@gmail.com, jshiyam7833@gmail.com, jsilmy@yahoo.com, dmmanager@elineapparels.com</to>
                        </recipient>
                    </emoSignatureBasedEmailRecipientList>
