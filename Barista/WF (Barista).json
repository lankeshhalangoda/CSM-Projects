  "status": {
    "name": "Status",
    "type": "enum",
    "values": [
      {
        "id": "Open",
        "name": "Open"
      },
      {
        "id": "In Progress",
        "name": "In Progress",
        "triggers": [
          {
            "channel": "fieldChange",
            "condition": {
              "and": [
                {
                  "==": [
                    {
                      "var": "status"
                    },
                    "In Progress"
                  ]
                }
              ]
            },
            "changingFields": [
              {
                "id": "priority",
                "value": "Medium"
              }
            ]
          }
        ]
      },
      {
        "id": "Resolved",
        "name": "Resolved",
        "triggers": [
          {
            "channel": "email",
            "template": "complaintResolutionAlert",
            "target": "admin",
            "contactFilters": [
              "ticketResolutionAlert"
            ],
            "adminUserQuery": {
              "condition": {
                "==": [
                  {
                    "var": "type"
                  },
                  "customerSatisfactionSurvey"
                ]
              },
              "rules": [
                {
                  "field": "type",
                  "operator": "eq",
                  "value": "$type$"
                }
              ]
            }
          },
          {
            "channel": "email",
            "template": "complaintResolutionAlert_orm",
            "target": "admin",
            "condition": {
              "!=": [
                {
                  "var": "type"
                },
                "customerSatisfactionSurvey"
              ]
            },
            "adminUserQuery": {
              "condition": {
                "!=": [
                  {
                    "var": "type"
                  },
                  "customerSatisfactionSurvey"
                ]
              },
              "rules": [
                {
                  "field": "type",
                  "operator": "eq",
                  "value": "$type$"
                }
              ]
            }
          },
          {
            "template": "complaintResolution_customer",
            "channel": "email",
            "target": "customer",
            "appendEditUrl": false,
            "adminUserQuery": {
              "condition": {
                "==": [
                  {
                    "var": "type"
                  },
                  "complaintManagementSurvey"
                ]
              },
              "rules": [
                {
                  "field": "type",
                  "operator": "eq",
                  "value": "$type$"
                }
              ]
            }
          }
        ]
      }
    ],
    "transitions": [
      {
        "sourceState": "Open",
        "targetStates": [
          "In Progress"
        ]
      },
      {
        "sourceState": "In Progress",
        "targetStates": [
          "Resolved"
        ]
      },
      {
        "sourceState": "Resolved",
